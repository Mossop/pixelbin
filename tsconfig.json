{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "include": [
    "@types",
    "gulpfile.ts",
    "stylelint.config.js",
    "app/js",
    "app/static/scripts",
    "base",
    "ci"
  ],
  "exclude": [
    "node_modules",
    "venv",
    "public"
  ]
}
