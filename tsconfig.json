{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",

    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true
  },
  "include": [
    "@types",
    "gulpfile.ts",
    "stylelint.config.js",
    "jest.config.js",
    "app/js",
    "app/tests",
    "app/static/scripts",
    "base",
    "ci"
  ],
  "exclude": [
    "node_modules",
    "venv",
    "public"
  ]
}
