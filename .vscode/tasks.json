  "version": "2.0.0",
  "tasks": [{
    "label": "App tests",
    "type": "npm",
    "script": "test",
    "group": "test",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "App test file",
    "type": "npm",
    "script": "test -- ${file}",
    "group": "test",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "App code coverage",
    "type": "npm",
    "script": "test -- --collectCoverage",
    "group": "test",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "App build",
    "type": "npm",
    "script": "build",
    "group": "build",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "Api tests",
    "type": "shell",
    "command": "${workspaceFolder}/containers/test.sh",
    "group": "test",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "Run server",
    "type": "shell",
    "command": "${workspaceFolder}/containers/runserver.sh",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "Container build",
    "type": "shell",
    "command": "${workspaceFolder}/containers/build.sh",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "Container remove",
    "type": "shell",
    "command": "${workspaceFolder}/containers/remove.sh",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "Container start",
    "type": "shell",
    "command": "${workspaceFolder}/containers/start.sh",
    "presentation": {
      "clear": true,
    },
  }, {
    "label": "Database rebuild",
    "type": "shell",
    "command": "${workspaceFolder}/containers/rebuild_db.sh",
    "presentation": {
      "clear": true,
    },
  }]
}
