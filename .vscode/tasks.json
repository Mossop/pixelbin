  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "label": "Pixelbin API server",
      "isBackground": true,
      "command": "run",
      "args": [
        "--",
        "serve"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/packages/webapp",
        "env": {
          "PATH": "/Users/dave/.local/share/mise/shims:$PATH"
        }
      },
      "problemMatcher": [],
      "label": "Pixelbin web server",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}